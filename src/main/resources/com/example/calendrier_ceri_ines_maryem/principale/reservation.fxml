<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.calendrier_ceri_ines_maryem.reservationController"
          alignment="CENTER"
          hgap="10" vgap="10" stylesheets="@reserver.css">


    <Label text="Nom de la salle :" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <ChoiceBox fx:id="nomSalleChoiceBox" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="amphi ada"/>
                <String fx:value="S3"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Label text="Date de début :" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <DatePicker fx:id="dateDebutPicker" promptText="AAAA-MM-JJ" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label text="Heure de début :" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField fx:id="heureDebutTextField" promptText="HH:MM" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Label text="Heure de fin :" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <TextField fx:id="heureFinTextField" promptText="HH:MM" GridPane.columnIndex="2" GridPane.rowIndex="5" />

    <Button fx:id="checkAvailabilityButton" onAction="#handleCheckAvailability" text="Vérifier la disponibilité" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="6" />

</GridPane>
