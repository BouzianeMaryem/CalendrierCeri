<VBox minHeight="200" minWidth="300" prefHeight="432.0" prefWidth="446.0" spacing="10" styleClass="HBox" stylesheets="@reservation.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calendrier_ceri_ines_maryem.EmailFormController">
    <padding>
        <Insets bottom="10" left="10" right="20" top="15" />
