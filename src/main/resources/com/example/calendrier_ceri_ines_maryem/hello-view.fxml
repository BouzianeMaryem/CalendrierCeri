<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" fx:controller="com.example.calendrier_ceri_ines_maryem.LoginController">

    <!-- Titre -->
    <Text text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <font>
            <Font size="20" />
        </font>
    </Text>

    <!-- Label pour le nom d'utilisateur -->
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <!-- Champ de saisie pour le nom d'utilisateur -->
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Label pour le mot de passe -->
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <!-- Champ de saisie pour le mot de passe, masquÃ© -->
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Bouton de connexion -->
    <Button text="Login" GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity" onAction="#onLoginButtonClicked"/>

</GridPane>
