<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calendrier_ceri_ines_maryem.MController">
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="monthHeader">
            <Button fx:id="previousMonthButton" text="&lt;" onAction="#loadPreviousMonth"/>
            <Text fx:id="displayedMonthText" text="January 2024"/>
            <Button fx:id="nextMonthButton" text="&gt;" onAction="#loadNextMonth"/>
        </HBox>
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </top>
    <center>
        <VBox spacing="10">
            <GridPane fx:id="monthGridPane" gridLinesVisible="true">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <!-- Dynamically add rows and columns in your controller -->
            </GridPane>
        </VBox>
    </center>
</BorderPane>
